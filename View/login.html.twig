{% extends "base.html.twig" %}

{% block title %}Login{% endblock %}

{% block header %}Login{% endblock %}

{% block content %}
    <div class="well pagination-centered login">
        <p class="lead">Please login to continue.</p>
        <form action="/login/authorize" method="POST" class="form-horizontal">
            {% if error is not null %}
                <div class="alert alert-error">
                    <b>{{ error.error|replace({'_': ' '})|capitalize }}:</b><br>{{ error.error_description }}
                </div>
            {% endif %}
            <div class="input-prepend input-block-level">
                <span class="add-on"><i class="icon-user"></i></span>
                <input type="text" name="name" placeholder="Username"/>
            </div><br/><br/>
            <div class="input-prepend input-block-level">
                <span class="add-on"><i class="icon-lock"></i></span>
                <input type="password" name="password" placeholder="Password"/>
            </div><br/><br/>
            <input type="hidden" name="redirect" value="{{ redirect }}"/>
            <button type="submit" class="btn btn-success">Login</button>
        </form>
    </div>
{% endblock %}